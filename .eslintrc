{
    "rules": {
        "indent": [
            2,
            "tab"
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
		"no-underscore-dangle": 0,
		"no-mixed-requires": 0
    },
    "plugins": [
        /* "react" */
    ],
    "globals": {
        "angular": true,
		"logger": true,
        "digitalData": true,
        "_satellite": true
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "jasmine": true,
        "phantomjs": true
    },
    "ecmaFeatures": {
        "jsx": true,
        "modules": true
    },
	"parserOptions": {
		"sourceType": "module"
	}
}
